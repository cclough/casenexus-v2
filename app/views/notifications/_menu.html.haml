- if @unread_count.blank? then @unread_count = current_user.notifications.unread.for_display.count end
- if @notifications.blank? then @notifications = Notification.header(current_user) end

%a#header_nav_icon_notifications_container{:href => "/notifications", "data-original-title"=>"You have " + @unread_count.to_s + "  unread notification(s)", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"}
  / notifications icon + notification count
  %i#header_nav_icon_notifications.notifications_glowable.icon-envelope.icon-large{class: ("unread" if @unread_count > 0)}
  - if @unread_count > 0
    %span.iconbar-unread
      = @unread_count.to_s