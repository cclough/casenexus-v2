$("#notifications_index_notifications").html("<%= escape_javascript(render("notifications")) %>")

///////// Index Item Actions

$('.notifications_index_notifications_item').click(function() {

	if ($(this).attr('data-ntype') == "message") {

		var item_id = $(this).attr('data-id');

		if ($(this).hasClass('slid')) {

			$('#notifications_index_notifications_item_message_body_' + item_id).slideUp('fast');
			$(this).removeClass('slid');

		} else {

			$('#notifications_index_notifications_item_message_body_' + item_id).slideDown('fast');
			$(this).addClass('slid');

		}

	}

});

$('.notifications_index_notifications_item').hover(

  function() {
  	if ($(this).hasClass('read')) {
       $(this).stop().fadeTo('fast', 1);
    }
  },
  function(){
  	if ($(this).hasClass('read')) {
      $(this).stop().fadeTo('fast', 0.3);
    }
  }

);
