$("#notifications_index_notifications").html("<%= escape_javascript(render("notifications")) %>")

///////// Index Item Actions

$('.notifications_index_notifications_item_button_expand').click(function() {

	var item_id = $(this).attr('data-id');

	if ($(this).hasClass('slid')) {

    $('#notifications_index_notifications_item_content_' + item_id).slideUp('fast', function() {
      $('#notifications_index_notifications_item_content_trunc_' + item_id).fadeIn('fast');
    });

		$(this).removeClass('slid');

	} else {

    $('#notifications_index_notifications_item_content_trunc_' + item_id).fadeOut('fast', function() {
      $('#notifications_index_notifications_item_content_' + item_id).fadeIn('fast');     
    });
		$(this).addClass('slid');

	}

});

$('.notifications_index_notifications_item_button_history').click(function() {

	var user_id = $(this).attr('data-id');

  $.get("/notifications/" + user_id, function(data) {

      $("#notifications_index_notifications").html(data); 

  });

});



$('.notifications_index_notifications_item').hover(

  function() {
  	if ($(this).hasClass('read')) {
       $(this).stop().fadeTo('fast', 1);
    }
  },
  function(){
  	if ($(this).hasClass('read')) {
      $(this).stop().fadeTo('fast', 0.3);
    }
  }

);
