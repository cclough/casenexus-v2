- provide(:title, 'Your Notifications')


#notifications_index_notifications_container
  #notifications_index_form_container
    #notifications_index_notifications_header
      = render 'notifications_form'
  #notifications_index_notifications
    = render :partial => 'notifications'


- if Notification.most_recent_for(current_user.id).count > 0
  #notifications_index_conversation{"data-last_user_id" => @last_user.id }
    = render :partial => 'show', locals: { user: @last_user }
- else
  #notifications_index_conversation

  #notifications_index_conversation_empty
    #notifications_index_conversation_empty_icon
      %i.icon-envelope
    %p Open a Conversation
