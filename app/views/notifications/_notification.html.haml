= link_to ("/notifications/" + notification.id.to_s) do

  .row.notifications_index_item
    .span7
      = avatar_for(notification.sender)
    .span15
      .row
        %strong 
          = notification.sender.name
      .row.application_timestamp
        #{time_ago_in_words(notification.created_at)} ago.
    .span10.notification_index_type
      = notification.ntype
    .span45
      = notification.content_trunc
    .span5.pull-right
      = notification.read