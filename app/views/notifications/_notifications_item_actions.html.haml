- case notifications_item.ntype
  - when "message"
    = link_to "Conversation History", '/notifications/' + notifications_item.sender_id.to_s, class: "notifications_index_notifications_item_button_history", 'data-id' => notifications_item.sender_id.to_s
  - when "feedback"
    = link_to 'Jump to Case', '/cases?id=' + notifications_item.case_id.to_s
  - when "feedback_req"
    = link_to 'Jump to Feedback form', ({ controller: "cases", action: "new", user_id: notifications_item.sender_id, subject: notifications_item.content.html_safe, date: notifications_item.event_date })
  - when "friendship_req"
    - if notifications_item.notificable
      = link_to 'Jump to Friendship Request', friendship_path(notifications_item.notificable)