= form_tag notifications_path, method: 'get', id: "notifications_index_notifications_form", onsubmit: 'return false' do
  .row
    .span22
      / search field
      = text_field_tag :search, params[:search], placeholder: "Search notifications...", id: "notifications_index_notifications_form_searchfield", class: 'search-query span18'
    / .span5
    /   #notifications_index_notifications_form_sort
    /     / sort/filter pulldown menu
    /     .btn-group
    /       %a#notifications_index_notifications_button_filter.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
    /         Sort
    /         %span.caret
    /       %ul.dropdown-menu
    /         %li
    /           / = radio_button_tag :cases_listtype, 'local', checked: true
