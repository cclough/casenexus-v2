      Feedback Requests
  .row
    #notifications_index_notifications_form_button_3.notifications_index_sidenav_item
      Feedback
  .row
    #notifications_index_notifications_form_button_4.notifications_index_sidenav_item
      Case Partners

  #notifications_index_notifications_form_radiogroup
    = radio_button_tag :notifications_listtype, 'all', checked: true
    = radio_button_tag :notifications_listtype, 'message'
    = radio_button_tag :notifications_listtype, 'feedback_req'
    = radio_button_tag :notifications_listtype, 'feedback'
