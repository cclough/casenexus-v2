%header.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner{:class => ("header_navbar-inner_signedout" if !signed_in?)}
    .container
      #header_logo_nav{:class => ("header_logo_nav_signedout" if !signed_in?)}
        = link_to image_tag("app/logo.png"), root_path

      - if signed_in?
        %ul#nav_links_left.nav.pull-left

          %li.divider-vertical

          / MAP: pushpin or globe or picture or road or map-marker
          %li
            = link_to raw("<i class='icon-globe icon-large icon-white'></i> Users"), users_path
          %li
            = link_to raw("<i class='icon-random icon-large icon-white'></i> Roulette"), '/roulette'

        %ul.nav.pull-right

          = render 'header/menu_notifications'

          = render 'header/menu_profile'

      - else
        %ul#nav_links_left.nav.pull-left

          %li.divider-vertical
          %li
            = link_to raw("<i class='icon-bolt icon-large icon-white'></i> About"), about_path

        #header_signin_form
          = form_for(:session, url: sessions_path, :html => { :class => "navbar-form"} ) do |f|
            
            .row
              .span16
                = f.text_field :email, class: 'span15', tabindex: "1", placeholder: "Email Address", id: "header_signin_email"
              .span16
                .input-append
                  = f.password_field :password, class: 'span15', tabindex: "2", placeholder: "Password", id: "header_signin_password"
                  %button.btn.btn-inverse{:href => "#", :type => "submit", tabindex: "3"}
                    %i.icon-arrow-right.icon-white
            .row
              .span16
                = link_to "Forgotten your password?", new_password_reset_path, class: 'font_small'
              .span16
                .span8
                  = f.label :remember_me, class: 'font_small pull-right'
                .span2.offset3
                  = f.check_box :remember_me, {:checked => true}

              

            
