%header.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner{:class => ("signedout" if !signed_in?) }
    .container
      #header_logo_nav{:class => ("signedout" if !signed_in?) }
        = link_to image_tag("app/logo.png"), root_path

      - if signed_in?

        - if current_user.completed?
          %ul#header_nav_links_left.nav.pull-left

            %li.divider-vertical

            / MAP: pushpin or globe or picture or road or map-marker
            %li
              = link_to raw("<i class='icon-pushpin icon-large icon-white'></i> Map"), dashboard_path
            %li
              = link_to raw("<i class='icon-random icon-large icon-white'></i> Roulette"), roulette_path
            %li
              = link_to raw("<i class='icon-info-sign icon-large icon-white'></i> Help"), '#', id: 'header_link_help'
            %li
              = link_to raw("<i class='icon-gift icon-large icon-white'></i>"), '#', id: 'header_link_bug'

          %ul#header_nav_links_right.nav.pull-right

            = render 'header/menu_notifications'

            = render 'header/menu_profile'

        - else

          %ul.nav.pull-right

            = render 'header/menu_profile_incomplete'

      - else
        %ul#header_nav_links_left.nav.pull-left

          %li.divider-vertical

        = render 'header/form_signin'