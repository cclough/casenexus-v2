%header.navbar.navbar-inverse
  .navbar-inner{:class => ("signedout" if !signed_in?) }
    .container
      #header_logo_nav{:class => ("signedout" if !signed_in?) }
        = link_to image_tag("app/logo.png"), root_path

      - if signed_in?

        #application_notify

        - if current_user.completed?
          %ul#header_nav_links_left.nav.pull-left

            / %li.divider-vertical
            %li.offset1
              #header_nav_panel_browse
                %ul
                  / MAP: pushpin or globe or picture or road or map-marker
                  %li#header_nav_button_container_browse
                    = link_to raw("<i class='icon-circle-blank icon-fixed-width'></i> Browse"), map_path, "data-original-title"=>"Browse for people to do cases with", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"
                  %li
                    = form_tag '#', method: 'get', id: "header_nav_panel_browse_search_form", onsubmit: 'return false' do
                      = text_field_tag :search, params[:search], placeholder: "Search...", id: "header_nav_panel_browse_search_field", "data-original-title"=>"Search for people to do cases with", rel: "tooltip", "data-placement"=>"bottom", class: 'search-query application_tooltip'

            %li.offset1
              = link_to raw("<i class='icon-book icon-white icon-fixed-width'></i> Library"), library_path, "data-original-title"=>"Library of Cases", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"

            %li.divider-vertical
            %li
              = link_to raw("<i class='icon-question icon-white icon-fixed-width'></i>"), '#', id: 'header_link_help', "data-original-title"=>"Help", rel: "tooltip", "data-placement"=>"bottom", class: "header_nav_icon_narrow application_tooltip"

            %li.divider-vertical
            %li
              = link_to raw("<i class='icon-bullhorn icon-white icon-fixed-width'></i>"), '#', id: "header_link_contact", "data-original-title"=>"Contact us", rel: "tooltip", "data-placement"=>"bottom", class: "header_nav_icon_narrow application_tooltip"
            %li.divider-vertical

          %ul#header_nav_links_right.nav.pull-right

            = render 'header/menu_notifications'

            %li
              = link_to current_user.name, summary_path

        - else

          %ul.nav.pull-right

            = render 'header/menu_profile_incomplete'

      - else
        %ul#header_nav_links_left.nav.pull-left

          %li.divider-vertical

        = render 'header/signin_form'