- provide(:title, 'Ask a Question')
- provide(:sub_title, 'Fill out the form to ask a question')


= form_for @question, url: { controller: :questions, action: :create } do |f|

  = render 'shared/error_messages', object: @question

  .row
    = f.text_field :title, placeholder: "Title..."
  
  .row
    = f.text_area :content, placeholder: "Ask a question..."
  .row
    = f.label :tag_list, "Tags (separated by commas)"
    = f.text_field :tag_list
  .row
    = f.submit "Submit question", class: "btn btn-inverse"