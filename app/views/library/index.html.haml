- provide(:title, 'Library')
- provide(:sub_title, 'Library of case sources, generated by users')

.panel.darker.kill_bottom

  = form_tag books_path, method: 'get', id: "books_index_books_form", onsubmit: 'return false' do
    .row
      .span
        = text_field_tag :search, params[:search], placeholder: "Search the library", id: "books_index_books_form_searchfield", class: 'search-query span23'
      
      .pull-right
        / Type Buttons
        .span
          #books_index_books_form_buttons_type
            .btn-group
              %a.books_index_books_form_button_type.btn.btn-small{"data-action"=>"type", "data-id"=>0} Guides
              %a.books_index_books_form_button_type.btn.btn-small.active{"data-action"=>"type", "data-id"=>1} Cases
          #books_index_books_form_radios_type
            = radio_button_tag :books_list_type, 'guides'
            = radio_button_tag :books_list_type, 'cases', checked: true

        / Sort buttons
        .span
          #books_index_books_form_buttons_sort
            .btn-group
              %a.books_index_books_form_button_sort.btn.btn-small.active{"data-action"=>"sort", "data-id"=>0} Rating
              %a.books_index_books_form_button_sort.btn.btn-small{"data-action"=>"sort", "data-id"=>1} Title
              %a.books_index_books_form_button_sort.btn.btn-small{"data-action"=>"sort", "data-id"=>2} Source
          #books_index_books_form_radios_sort
            = radio_button_tag :books_list_sort, 'average_rating', checked: true
            = radio_button_tag :books_list_sort, 'title'
            = radio_button_tag :books_list_sort, 'source'

    .row
      #books_index_books

        = render 'books'
