= form_tag '#', method: 'get', id: "users_index_users_form", onsubmit: 'return false' do
  .row
    / search field
    = text_field_tag :search, params[:search], placeholder: "Search users...", id: "users_index_users_form_searchfield", class: 'search-query span30'

  .spacer5
  .row
    #users_index_users_form_buttons
      .btn-group
        %a#users_index_users_form_button_0.btn.btn-small.active <100km
        %a#users_index_users_form_button_1.btn.btn-small Global
        %a#users_index_users_form_button_2.btn.btn-small Random
        %a#users_index_users_form_button_3.btn.btn-small.btn-inverse Contacts
  #users_index_users_form_radiogroup
    = radio_button_tag :users_listtype, 'local', checked: true
    = radio_button_tag :users_listtype, 'global'
    = radio_button_tag :users_listtype, 'rand'
    = radio_button_tag :users_listtype, 'contacts'