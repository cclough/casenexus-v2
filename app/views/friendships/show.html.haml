.panel.gradient
  .row
    .span86
      - case @friendship.status
        - when Friendship::PENDING
          = "You have requested a contact to #{link_to(@friendship.friend, member_path(@friendship.friend))} on #{@friendship.created_at}".html_safe
        - when Friendship::REQUESTED
          = "#{link_to(@friendship.friend, member_path(@friendship.friend))} requested a contact relationship with you".html_safe
          = link_to("Accept", accept_friendship_path(@friendship), method: :put)
          = link_to("Reject", reject_friendship_path(@friendship), method: :put)
          = link_to("Block", block_friendship_path(@friendship), method: :put)
        - when Friendship::REJECTED
          = "You have rejected an invitation from #{link_to(@friendship.friend, member_path(@friendship.friend))}".html_safe
        - when Friendship::REJECTED
          = "You have blocked #{link_to(@friendship.friend, member_path(@friendship.friend))}".html_safe
          = link_to("Unblock", unblock_friendship_path(@friendship), method: :put)
