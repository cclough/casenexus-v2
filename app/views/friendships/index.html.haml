- provide(:title, 'Your contacts')

.panel.gradient
  %button#users_index_show_close.close Ã—

  .row
    .span86

      = link_to("Contacts Requested", requests_friendships_path)
      |
      = link_to("Contacts Invitations", invites_friendships_path)
      |
      = link_to("Contacts Blocked", blocked_friendships_path)

      %br

      %ul
        - @friendships.each do |friendship|
          %li
            = link_to(friendship.friend, member_path(friendship.friend))

            = link_to("Block", block_friendship_path(friendship))
            = link_to("Delete", friendship_path(friendship), method: :delete, confirm: "Are you sure?")