- provide(:title, 'Posts')
- provide(:sub_title, 'People discussing stuff')


#posts_index_panel_main
  - if @posts.count > 0
    - for posts_item in @posts
      = render partial: 'posts_item' , locals: { posts_item: posts_item }
  - else
    No posts found


#posts_index_panel_new
  = form_for @post, id: "posts_index_form" do |f|

    .span30
      - current_user.channels.each_with_index do |channel,index|
        .posts_index_channels_item
          .btn-group

            .btn.btn-inverse.posts_index_channels_item_filter_button.application_truncatable
              = image_tag channel.image
              = channel.name

            .btn.btn-inverse.posts_index_channels_item_submit_button{ "data-radio" => index, class: ("active" if (index==0)) }
              = f.radio_button :channel_id, channel.id, checked: (true if (index == 0)), class: ""
              %i.icon-circle-blank


      / = f.collection_select :channel_id, Channel.all, :id, :name, {class: "span15"}

    .span.offset1
      #flash_notifications
        = render 'shared/error_messages', object: @post
      .row
        = f.text_area :content, id:"posts_index_form_textarea", placeholder: "Post..."
      .row
        = f.submit "Submit", class: "btn btn-inverse"