%li#fat-menu.dropdown

  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", "data-original-title"=>"Your Profile", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"}
    / %i.icon-user.icon-white.icon-large
    %span#header_menu_profile_name
      = current_user.name
    %span.caret

  %ul.dropdown-menu

    %li
      = link_to summary_path do
        %i.icon-home.application_menu_icon.icon-fixed-width
        %span.offset1
          Home

    %li
      = link_to events_path do
        %i.icon-calendar.application_menu_icon.icon-fixed-width
        %span.offset1
          Calendar

    %li
      = link_to cases_path do
        %i.icon-edit.application_menu_icon.icon-fixed-width
        %span.offset1
          Cases

    %li
      = link_to analysis_cases_url do
        %i.icon-bar-chart.application_menu_icon.icon-fixed-width
        %span.offset1
          Performance Analysis
    %li.divider          
    %li
      = link_to edit_account_path do
        %i.icon-cogs.application_menu_icon.icon-fixed-width
        %span.offset1
          Edit Profile
    %li.divider
    %li
      = link_to destroy_user_session_path, method: :delete do
        %i.icon-arrow-right.application_menu_icon.icon-fixed-width
        %span.offset1
          Sign out

    .spacer5