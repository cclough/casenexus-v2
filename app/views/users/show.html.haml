.panel.gradient
  
  %button#users_index_show_close.close Ã—

  #users_show_casecount
    .panel.dark
      = @user.casecount
      .font-small
        cases

  .row
    .span5
      .application_avatar
        = avatar_for(@user)
    .span20
      #users_show_name
        = @user.name
  .spacer5
  .row.font-small
    .span8
      = link_to image_tag("icons/linkedin.png", alt: "View xx's profile on LinkedIn", height: "15", width: "20", border:"0") + "LinkedIn", 'http://uk.linkedin.com/in/xx'
    .span7
      %a{:href => "#{@user.skype}?add"}
        %img{:alt => "#{@user.skype}'s status", :height => "16", :src => "http://mystatus.skype.com/smallicon/#{@user.skype}", :width => "16"}
        Skype
    .span
      = render 'shared/button_friend_remove'
  .spacer5
  .row
    = render 'shared/button_Group_feedback_req_and_send'


.panel
  .row
    .span40
      #users_show_status
        = @user.status
  .row
    .span20.offset20
      = render 'shared/button_friend_req_or_message'
  
.panel

  .application_form_title
    Education
  .row
    .span25
      = @user.education1
    .span10
      = @user.education1_from.strftime("%Y") + "-" + @user.education1_to.strftime("%Y")
  .row
    .span25
      = @user.education2
    .span10
      = @user.education2_from.strftime("%Y") + "-" + @user.education2_to.strftime("%Y")
  .row
    .span25
      = @user.education3
    .span10
      = @user.education3_from.strftime("%Y") + "-" + @user.education3_to.strftime("%Y")
      

  .application_form_title
    Experience
  .row
    .span25
      = @user.experience1
    .span10
      = @user.experience1_from.strftime("%Y") + "-" + @user.experience1_to.strftime("%Y")
  .row
    .span25
      = @user.experience2
    .span10
      = @user.experience2_from.strftime("%Y") + "-" + @user.experience2_to.strftime("%Y")
  .row
    .span25
      = @user.experience3
    .span10
      = @user.experience3_from.strftime("%Y") + "-" + @user.experience3_to.strftime("%Y")


#modal_friendship_req.modal.hide.fade
  = render 'shared/modal_friendship_req_form'

