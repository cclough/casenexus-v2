// re-renders the user list
$("#users_index_list").html("<%= escape_javascript(render("list")) %>")

// Marker Click Trigger - Has to be in here because other wise does not load in time for list to be loaded
$('.users_index_list_item').click(function() {

	// Break up id string, so can get id off the end
	var target_id = this.id.split('_');
	// Get the marker, using jquery-ui-map
	var target_marker = $('#users_index_map').gmap('get', 'markers')[target_id[4]]
	// trigger a click on the marker
	$(target_marker).triggerEvent('click');

});