.row
  .span50.offset22
    .panel.gradient
      = render 'layouts/flash', flash: flash

      %h2 Sign Up

      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f|
        = f.error_notification

        = f.input :ip_address, as: 'hidden', input_html: { value: request.remote_ip }

        .form-inputs
          = f.input :first_name, autofocus: true, placeholder: 'First Name'
          = f.input :last_name, placeholder: 'Last Name'
          = f.input :email, placeholder: 'Email'
          = f.input :password, placeholder: 'Password'
          = f.input :password_confirmation, required: true, placeholder: 'Confirm Password'

          = f.input :email_admin, label: 'Subscribe to advice letter'
          = f.input :email_users, label: 'Receive email notifications'
          = f.input :confirm_tac, as: :boolean, label: 'Accept the Terms & Conditions'

        .form-actions
          = f.button :submit, "Sign up"

      = render "devise/shared/links"
