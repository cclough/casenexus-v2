.profile_index_friends_friends_item

  .profile_index_friends_friends_item_requested_highlight{ class: ("unread" if Friendship.requested?(current_user,friends_item)) }


  .profile_index_friends_friends_item_avatar
    = avatar_for(friends_item,size: "medium")

  .profile_index_friends_friends_item_user

    .profile_index_friends_friends_item_username
      = friends_item.username_trunc

    .profile_index_friends_friends_item_actions
      / %i#profile_index_friends_actions_invite.icon-plus
      / %span#profile_index_friends_actions_skype.fui-skype
      #profile_index_friends_actions_start.btn.btn-colour.btn-round.btn-round-small{ "data-container"=>"body", "data-original-title"=>"Start case...", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"}
        %i.icon-play-sign

      #profile_index_friends_actions_message.btn.btn-colour.btn-round.btn-round-small{ "data-container"=>"body", "data-original-title"=>"Send message...", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"}
        %i.icon-envelope
      #profile_index_friends_actions_profile.btn.btn-colour.btn-round.btn-round-small{ "data-container"=>"body", "data-original-title"=>"Jump to map profile", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"}
        %i.icon-map-marker
      #profile_index_friends_actions_event.btn.btn-colour.btn-round.btn-round-small{ "data-container"=>"body", "data-original-title"=>"Book case appointment...", rel: "tooltip", "data-placement"=>"bottom", class: "application_tooltip"}
        %i.icon-calendar







    - if Friendship.requested?(current_user,friends_item)
      .profile_index_friends_friends_requested
        = link_to("Accept", accept_friendship_path(id: Friendship.friendship(current_user,friends_item), back_url: "/"), method: :put, class: "btn btn-colour btn-micro profile_index_friends_friends_item_friendship_button")
        = link_to reject_friendship_path(id: Friendship.friendship(current_user,friends_item), back_url: "/"), method: :put, class: "btn btn-colour btn-micro profile_index_friends_friends_item_friendship_button" do
          %i.icon-remove


  .profile_index_friends_friends_item_status

    %i.icon-circle-blank.profile_index_friends_friends_item_status_icon{class: (if friends_item.online_now? then "online_now" elsif friends_item.online_earlier? then "online_earlier" else "online_not" end)}