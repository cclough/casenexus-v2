- if @ntype == "event_set_partner"
  #{@user_from.username} has booked a case appointment with you
- elsif @ntype == "event_change_partner"
  #{@user_from.username} has amended your case appointment
- elsif @ntype == "event_cancel_partner"
  #{@user_from.username} has cancelled your case appointment
- elsif @ntype == "event_remind_partner"
  Reminder: you have a case appointment with #{@user_from.username}


%table
  %tr
    %td
      %img{alt: "Estately", src: "https://www.casenexus.com/assets/universities/" + @user_from.university.image, style: "font-size: 20px; text-align: left; border: none; font-size: 14px; max-height: 30px; outline: none; text-decoration: none;font-weight: bold;"}/

    %td{style: "font-size:13px;margin-left:10px;"}
      %strong
        #{@user_from.username}
      %br
      #{@event.datetime.strftime("%A %e %B at %I:%M%p")}


- unless @ntype == "event_cancel_partner"
  %table{style: "border:1px solid #f0f1f2;padding:5px;"}
    %tr
      %td

        %table
          %tr
            %td{style: "border-bottom:1px solid #f0f1f2;padding:5px;margin-bottom:5px;"}
              - unless @event.book_id_usertoprepare.blank?
                You have asked #{@user_from.username} to prepare a case
                %br
                %div{style:"text-align:center;"}
                  = @book_usertoprepare.author.split(' ')[0] + " - " + @book_usertoprepare.title
              - else
                You have not yet asked #{@user_from.username} to prepare a case
                %div{style:"background-color:#e7f6ff;height:35px;width:180px;margin:2px;padding:3px;"}
                  = link_to "CHOOSE CASE FOR THEM TO PREPARE", @url
          %tr
            %td{style: "padding:5px;"}
              - unless @event.book_id_partnertoprepare.blank?
                You have been asked to prepare (see PDF attached)
                %strong
                  = @book_partnertoprepare.author.split(' ')[0] + " - " + @book_partnertoprepare.title
              - else
                You have not yet been asked to prepare a case
      %td

        %table
          %tr
            %td
              %div{style:"background-color:#e7f6ff;height:35px;width:180px;margin:2px;padding:5px;"}
                = link_to "skype:#{@user_from.skype}?call", "data-original-title"=>"Call #{@user_from.username} on Skype" do
                  %table
                    %tr
                      %td
                        / #{image_tag "https://www.casenexus.com/assets/icons/skype_button.png"}
                      %td
                        Call #{@user_from.username}
          %tr
            %td
              %div{style:"background-color:#e7f6ff;height:35px;width:180px;margin:2px;padding:5px;"}
                - unless @event.book_id_partnertoprepare.blank?

                  %a{ href:"https://www.casenexus.com/console?friend_id=" + @event.partner.id.to_s + "&book_id=" + @book_partnertoprepare.id.to_s }
                    Start case as Interviewer
                - else

                  %a{ href:"https://www.casenexus.com/console?friend_id=" + @event.partner.id.to_s }
                    Start case as Interviewer now

%br
- unless @ntype == "event_cancel_partner"
  %p= link_to "Click here to view or change this appointment", @url
- else
  %p= link_to "Click here to arrange another appointment", @url