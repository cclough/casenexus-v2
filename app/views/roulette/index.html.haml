- provide(:title, 'Roulette')

- content_for :javascript_includes do

  :javascript
    var roulette_index_user_id = "#{current_user.id}";

= content_for :content do

  .panel.gradient.roulette

    .span60.offset20

      .row
        .span20
          %button#roulette_index_button_connect.btn.btn-large.btn-inverse
