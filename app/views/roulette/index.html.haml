- provide(:title, 'Roulette')

- content_for :javascript_includes do

  :javascript
    var roulette_index_user_id = "#{current_user.id}";

= content_for :content do

  .panel.gradient.roulette

    .span85.offset2

      .row
        .span15
          %button#roulette_index_button_connect.btn.btn-inverse.roulette_index_button_connection
            %i.icon-share-alt.icon-white
            %span#roulette_index_button_connect_text
              Connect
        .span15
          %button#roulette_index_button_disconnect.btn.btn-inverse.roulette_index_button_connection
            %i.icon-share-alt.icon-white
            %span
              Disconnect
        .span18.font-small
          .row
            Your roulette token
          .row
            #roulette_index_token
              = current_user.roulette_token
        .span36
          .row.font-small
            If you are interviewer, ask the interviewee for their roulette token:
          .row
            = form_tag('/cases/new', :method => "get") do
              .input-append
                = text_field_tag :roulette_token, nil, id: "roulette_index_field_token", placeholder: "Interviewee's Token"
                %button.btn.btn-inverse{ type: "submit" }
                  Feedback Form 
                  %i.icon-arrow-right.icon-white

      .row
        #roulette_index_users
      .row
        #roulette_index_log
      .row
        #debug