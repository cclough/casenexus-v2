- provide(:title, 'Summary')
- provide(:sub_title, 'Overview of all your stuff')


.row

  .span32

    .panel.darker.kill_left
      .summary_block_title
        Recent Cases
      - @cases.each do |summary_item_case|
        = link_to case_path(summary_item_case) do
          .row.summary_item_cases.btn.btn-inverse
            .span2
              = image_tag "avatars/icon.png"
            .span.offset1
              .row
                = summary_item_case.interviewer.name
              .row.summary_item_cases_subject
                = summary_item_case.subject_trunc
            .span.pull-right
              .panel.darker.kill_all.summary_item_cases_score
                = summary_item_case.totalscore
      = will_paginate @cases, class: "application_pagination", inner_window: 1, outer_window: 0


  .span39
    .row
      .panel.darker.kill_left.kill_bottom.span39
        .row
          = render "events/calendar"
        .spacer20
        .row
          %div
            .summary_block_title
              Events

            .row
              #summary_index_events_index
                - @events.each do |summary_item_event|
                  .row.summary_item_events{"data-id"=>summary_item_event.id.to_s}
                    .span2
                      = image_tag "avatars/icon.png"
                    .span9.offset1.summary_item_events_date
                      = summary_item_event.datetime.strftime("%a %d %b %I:%M%p")
                    .span.offset1
                      .row
                        = summary_item_event.partner.name
                      .row
                        = Book.find(summary_item_event.book_id_user).title unless summary_item_event.book_id_user.blank? 
                    .span.pull-right
                      .btn.btn-inverse.btn-mini
                        %i.icon-pencil


            = will_paginate @events, class: "application_pagination", inner_window: 1, outer_window: 0





.row

