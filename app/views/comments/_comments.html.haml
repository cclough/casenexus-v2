#books_show_comments
  - @comments.each do |comment|
    .books_show_comments_item.panel.darker.kill_all
      .row
        .span4
          .application_avatar
            = avatar_for(comment.user, 'icon')
        .span10.offset1
          .row
            %strong
              = comment.user.name
        .span.offset1
          = comment.content
        .span.pull-right
          .span.books_rating_read_container.panel.darker.kill_all
            .books_rating_read{"data-rating" => comment.rating}
            .books_rating_read_text
              User rating:
              = pluralize(comment.rating.round(0),"Star")

