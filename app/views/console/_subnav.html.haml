= form_tag 'console/sendpdf', remote: true, id: "console_index_subnav_form" do |f| # form must be at top as has to include e.g target_id field


  #console_index_subnav_button_sendpdf_container
    = render 'console/sendpdfbutton', layout: false

  #console_index_subnav_timer_panel
    .span9#console_index_timer_timeset_container.console_index_timer_panel_container
      .btn.btn-primary.btn-small.console_index_subnav_button_timer_set.application_tooltip{"data-set"=>30,"data-original-title"=>"Start timer at 30 minutes", rel: "tooltip", "data-placement"=>"bottom"}
        30
      .btn.btn-primary.btn-small.console_index_subnav_button_timer_set.application_tooltip{"data-set"=>45,"data-original-title"=>"Start timer at 45 minutes", rel: "tooltip", "data-placement"=>"bottom"}
        45
      .btn.btn-primary.btn-small.console_index_subnav_button_timer_set.application_tooltip{"data-set"=>60,"data-original-title"=>"Start timer at 60 minutes", rel: "tooltip", "data-placement"=>"bottom"}
        60
    .span9#console_index_timer_pause_container.console_index_timer_panel_container
      #console_index_subnav_button_timer_pause.btn.btn-primary.btn-small
        Pause
    .span9#console_index_timer_restartreset_container.console_index_timer_panel_container

      #console_index_subnav_button_timer_restart.btn.btn-primary.btn-small
        Start

      #console_index_subnav_button_timer_reset.btn.btn-primary.btn-small
        Reset

    .span.offset1.pull-right
      #console_index_subnav_timer
        00:00

  #console_index_subnav_select_friends_container
        
    #console_index_subnav_button_skype_container
      = render 'console/skypebutton', layout: false
      
    %select#console_index_subnav_select_friends.chzn-select{name: "target_id", "data-placeholder" => "Select Friend" }
      %option{value: ""} Select Friend
      = options_from_collection_for_select @friends, :id, :username, (@friend.id unless @friend.blank?)
