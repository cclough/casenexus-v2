= form_tag 'console/sendpdf', remote: true, id: "console_index_subnav_form" do |f| # form must be at top as has to include e.g target_id field
  .row
    .span15#console_index_subnav_select_books_container.offset1
      %select#console_index_subnav_select_books{name: "book_id", "data-placeholder" => "Choose a Case" }
        %option{value: ""} Select Case/External Case
        - @books.each do |books_select_item|
          %option{value: books_select_item.id, "selected" => ("selected" if (books_select_item.id == @book.id) unless @book.blank?) }
            = books_select_item.author.split(' ')[0] + " - " + books_select_item.title

    .span12.offset1#console_index_subnav_button_sendpdf_container
      = render 'console/sendpdfbutton', layout: false

    .span.offset1#console_index_subnav_timer_panel
      .span#console_index_timer_timeset_container.console_index_timer_panel_container
        .btn.btn-inverse.btn-small.console_index_subnav_button_timer_set.application_tooltip{"data-set"=>30,"data-original-title"=>"Start timer at 30 minutes", rel: "tooltip", "data-placement"=>"bottom"}
          30
        .btn.btn-inverse.btn-small.console_index_subnav_button_timer_set.application_tooltip{"data-set"=>45,"data-original-title"=>"Start timer at 45 minutes", rel: "tooltip", "data-placement"=>"bottom"}
          45
        .btn.btn-inverse.btn-small.console_index_subnav_button_timer_set.application_tooltip{"data-set"=>60,"data-original-title"=>"Start timer at 60 minutes", rel: "tooltip", "data-placement"=>"bottom"}
          60
      .span#console_index_timer_pause_container.console_index_timer_panel_container
        #console_index_subnav_button_timer_pause.btn.btn-inverse.btn-small
          Pause
      .span#console_index_timer_restartreset_container.console_index_timer_panel_container
        #console_index_subnav_button_timer_restart.btn.btn-inverse.btn-small
          Start
        #console_index_subnav_button_timer_reset.btn.btn-inverse.btn-small
          Reset
      .span.offset1
        #console_index_subnav_timer
          00:00

    .span16.pull-right#console_index_subnav_select_friends_container
      %select#console_index_subnav_select_friends{name: "target_id", "data-placeholder" => "Select Friend" }
        %option Select Friend
        = options_from_collection_for_select @friends, :id, :username, (@friend.id unless @friend.blank?)
        

    .span4#console_index_subnav_button_skype_container.pull-right
      = render 'console/skypebutton', layout: false
