- provide(:title, 'Who has viewed your profile')
- provide(:sub_title, 'A list of users who have recently viewed your profile')

- content_for :javascript_includes do
  = javascript_include_tag('account')

.panel.dark
  - if current_user.visits.count > 0
    - current_user.visits.order("created_at desc").first(10).each do |visit|
      .row.account_visitors_item
        .span5
          %span.fui-user
        .span20.offset2
          = link_to visit.visitor.username, "/map?user_id=" + visit.visitor.id.to_s
        .span10
          = visit.created_at.strftime("%a %d %b %Y %I:%M%p")
  - else
    No one has visited your profile