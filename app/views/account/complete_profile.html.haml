- provide(:title, 'Complete the sign-up process')
- provide(:sub_title, 'Follow the instructions and the fill in the form below')


- content_for :javascript_includes do
  = javascript_include_tag('account')

  :javascript
    var account_completeedit_map_lat_start = '#{current_user.lat}';
    var account_completeedit_map_lng_start = '#{current_user.lng}';

#account_complete_panel.static_home_slideable

  = form_for(@user, url: account_path) do |f|

    = hidden_field_tag :back_url, complete_profile_account_path

    = render 'shared/error_messages', object: @user

    #account_complete_map_header
      Drag the marker to your location
    #account_completeedit_map.complete.map

    = f.hidden_field :lat, id: "account_completeedit_lat"
    = f.hidden_field :lng, id: "account_completeedit_lng"

    .spacer10
    .row
      .span
        Time Zone
      .span.offset1
        = f.collection_select :time_zone, ActiveSupport::TimeZone.all, :name, :to_s, {}, { class: "chzn-select" }
    .spacer10

    .control-group
      = f.text_field :skype, placeholder: "Skype username", class: "span30 large"
      %i.input-icon.fui-skype.huge
    #account_completeedit_skype_link.pull-right
      = link_to "Need to register for a Skype account?", "https://login.skype.com/account/signup-form"

    .spacer5

    = f.collection_select :language_ids, Language.all, :id, :name, {:selected => @user.language_ids}, {multiple: true, class: "chzn-select span30", "data-placeholder" => "Which languages do you speak?"}

    .spacer10
    = f.select :degree_level, "<option>Undergraduate</option><option>MBA</option><option>Experienced Professional</option>".html_safe, {class: "chzn-select span10",:prompt => "Your degree level"}

    = f.collection_select :subject_id, Subject.all, :id, :name, {class: "chzn-select span10",:prompt => "Your degree subject"}

    
    .row
      .span
        = f.label :cases_external, "# cases done to date?"
      .span.offset1
        = f.text_field :cases_external, class: "span6"

    = f.submit "Complete Sign up", class: "btn btn-large btn-primary btn-embossed btn-block", id: "account_complete_panel_submit"