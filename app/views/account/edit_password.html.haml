- provide(:title, 'Change my password')
- provide(:sub_title, 'Enter a new password below')

- provide(:breadcrumb, "Edit Profile")
- provide(:breadcrumb_url, "/account/edit")
- provide(:breadcrumb_smallfont, "yes")


#account_editpassword_panel
  = form_for(@user, url: account_path, method: :put) do |f|
    = f.password_field :password, placeholder: "New password..."
    = f.password_field :password_confirmation, placeholder: "Confirm your new password..."
    = f.submit "Change my password", class: "btn btn-medium btn-primary "


= link_to "/", id: "static_forms_back_button", class: "btn btn-colour btn-micro" do
  %i.icon-arrow-left
  Return