                    .span18
                      #cases_new_slider_approachupfront.cases_new_slider{"data-category" => "structure"}
                    .span4
                      = f.text_field :approachupfront, class: "cases_new_slider_input panel darker", tabindex: "-1", id: 'cases_new_slider_input_approachupfront'
                  .row
