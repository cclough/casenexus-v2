                        Announces changed structure
                    .span18
                      #cases_new_slider_announceschangedstructure.cases_new_slider{"data-category" => "structure"}
                    .span4
                      = f.text_field :announceschangedstructure, class: "cases_new_slider_input panel darker", tabindex: "-1", id: 'cases_new_slider_input_announceschangedstructure'
                  .row
                    .span22
                      .cases_new_block_desc.cases_new_popover.panel.dark{ "rel" => "popover", "data-content" => "Pushes to a conclusion", "data-original-title" => "Push to Ccnclusion" }
                        Pushing to conclusion
                    .span18
                      #cases_new_slider_pushingtoconclusion.cases_new_slider{"data-category" => "structure"}
                    .span4
                      = f.text_field :pushingtoconclusion, class: "cases_new_slider_input panel darker", tabindex: "-1", id: 'cases_new_slider_input_pushingtoconclusion'
                .span1
                  .cases_new_block_circle_outer.panel.dark
                    .cases_new_block_circle.panel.darker
                      #cases_new_block_circle_text_structure.cases_new_block_circle_text
                        
                  
            .span35
