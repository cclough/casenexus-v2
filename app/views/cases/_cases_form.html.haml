= form_tag cases_path, method: 'get', id: "cases_index_cases_form", onsubmit: 'return false' do
  .panel.darker

    = text_field_tag :search, params[:search], placeholder: "Search cases...", id: "cases_index_cases_form_searchfield", class: 'search-query span23'

    #cases_index_cases_form_sort.pull-right
      / sort/filter pulldown menu

      .btn-group
        %button.btn.btn-small.btn-inverse Sort by
        %button.btn.btn-small.btn-inverse.dropdown-toggle{"data-toggle" => "dropdown"}
          %span.caret
        %ul.dropdown-menu
          %li
            = sortable "subject", "By Subject"
          %li
            = sortable "date", "By Date"

  #cases_index_cases.panel.dark.kill_bottom
  / content is rendered by index.js.erb