$("#cases_index_cases").html("<%= escape_javascript(render("cases")) %>")

$(".cases_index_cases_item").click(function() {

  var case_id = $(this).attr('data-id');

  $.get("/cases/" + case_id, function(data) {

    // Slide out
    $('#cases_index_case').hide("slide", { direction: "left" }, 300, function() {

      // Load the DATA
      $("#cases_index_case").html(data);


      // Other show js
      var cases_show_chart_radar_data = $('#cases_show_chart_radar_data_storage').attr('data-cases_show_chart_radar');

      cases_show_chart_radar_draw(cases_show_chart_radar_data);

      $('#cases_show_notes_form_notes').wysihtml5({
          "link": false, //Button to insert a link. Default true
          "image": false //Button to insert an image. Default true
      });

      $('#cases_show_notes_form_notes').keyup(function() {
        $('#cases_show_notes_form_callback').fadeOut('slow');

        setTimeout(function(){ 
          $('#edit_case_' + case_id).submit();
        }, 3000);  
      });

      // Slide in
      $('#cases_index_case').show("slide", { direction: "right" }, 300);
    });

  });


});



