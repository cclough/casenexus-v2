- provide(:title, 'Case with ' + @case.interviewer.name)

- content_for :javascript_includes do

  :javascript
    var cases_show_chart_radar_data = #{@case.cases_show_chart_radar_data};

.row
  .span47

    .panel.gradient
      .row
        .span10
          = avatar_for(@case.interviewer)
        .span20
          .application_name
            = @case.interviewer.name
          .row.application_timestamp
            = @case.date.strftime("%m/%d/%Y")
      .spacer10
      .row
        .span30
          = @case.subject
      .spacer10
      .row
        .span10
          Source
        .span20
          = @case.source
      .row
        .span10
          Submitted
        .span20
          = @case.created_at.strftime("%m/%d/%Y")

  .span47
    #cases_show_chart_radar.cases_radar

.row
  .span47
    .panel
      .cases_show_title
        Structure
      .row
        .span5.cases_score.show
          = @case.structure
        .span35.cases_show_comment
          = @case.structure_comment
  .span47
    .panel
      .cases_show_title
        Analytical/Problem-solving  
      .row
        .span5.cases_score.show
          = @case.analytical
        .span35.cases_show_comment
          = @case.analytical_comment

.row
  .span47
    .panel
      .cases_show_title
        Commercial Awareness
      .row
        .span5.cases_score.show
          = @case.commercial
        .span35.cases_show_comment
          = @case.commercial_comment
  .span47
    .panel
      .cases_show_title
        Conclusion
      .row
        .span5.cases_score.show
          = @case.conclusion
        .span35.cases_show_comment
          = @case.conclusion_comment

.row

  .span47
    .panel
      .cases_show_title
        Further Comment
      .row
        = @case.comment

  .span47
    .panel
      .cases_show_title
        Notes
      .row
        = @case.notes
