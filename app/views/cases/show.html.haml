        %div
          Analytical/Problem-solving  
        %table
          %tr
            %td
              %div
                = @case.analytical
            %td
              %div
                = @case.analytical_comment

  %tr
    %td
      .case_comment
        %div
          Commercial Awareness
        %table
          %tr
            %td
              %div
                = @case.commercial
            %td
              %div
                = @case.commercial_comment

    %td
      %div
        %div
          Conclusion
        %table
          %tr
            %td
              %div
                = @case.conclusion
            %td
              %div
                = @case.conclusion_comment

  %tr
    %td
      %div
        %div
          Further Comment
        %div
          = @case.comment


