      / stats panel
      .panel.type1
        %table
          %tr
            %td
              Marker
            %td
              = avatar_for(@case.interviewer)
              = @case.interviewer.name
          %tr
            %td
              Date
            %td
              = @case.date.strftime("%m/%d/%Y")
          %tr
            %td
              Subject
            %td
              = @case.subject
          %tr
            %td
              Source
            %td
              = @case.source
          %tr
            %td
              Submitted
            %td
              = @case.created_at.strftime("%m/%d/%Y")



    %td{:style => "width:340px;"}

      #chartdiv{:style => "width: 100%; height: 250px;"}


