%div{id: "cases_new_scoreselector_" + criteria }
  - (1..5).each do |i|
    - class_content = "cases_new_scoreselector_button btn btn-primary btn-embossed"
    - if i == existing_score
      - class_content = "cases_new_scoreselector_button btn btn-primary btn-embossed active"
    - else
      - class_content = "cases_new_scoreselector_button btn btn-primary btn-embossed"

    = content_tag :div, i, class: class_content, "data-score" => i, "data-criteria" => criteria, "data-category" => category