.cases_new_scoreselector_container{id: "cases_new_scoreselector_" + criteria }

  - (1..5).each do |i|

    - if i == existing_score
      - class_content = "cases_new_scoreselector_button btn active"
    - elsif i == 3 && !existing_score
      - class_content = "cases_new_scoreselector_button btn active"
    - else
      - class_content = "cases_new_scoreselector_button btn"

    = content_tag :div, class: class_content, "data-score" => i, "data-criteria" => criteria, "data-category" => category do
      = i
      - if i == 1
        .cases_new_scoreselector_button_desc
          POOR
      - elsif i == 5
        .cases_new_scoreselector_button_desc
          GOOD