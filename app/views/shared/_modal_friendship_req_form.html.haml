- if !current_user.friend_with?(@user)
  = form_for(@friendship, remote: true) do |f|
    .modal-header
      %button.close{"data-dismiss" => "modal", type: "button"} Ã—

      %h3 Send Contact Request

    .modal-body

      %p
        Introduce yourself
    
      #flash_notifications
        = render 'shared/error_messages', object: @friendship

      %div
        = f.text_area :content, placeholder: "Send message...", tabindex: "1"
        = f.hidden_field :user_id, :value => current_user.id
        = f.hidden_field :friend_id, :value => @user.id

    .modal-footer
      %a.btn{"data-dismiss" => "modal", href: "#"} Close
      %button.btn.btn-inverse{href: "#", type: "submit", tabindex: "2"}
        %i.icon-arrow-right.icon-white
        Send Request