#modal_bug.modal.hide.fade
  / = form_for(@notification, remote: true) do |f|
  .modal-header
    %button.close{"data-dismiss" => "modal", type: "button"} Ã—

    %h3 Found a bug? Suggest a Feature?

  .modal-body

    #flash_notifications
      / = render 'shared/error_messages', object: @notification

    %div
      / = f.text_area :content, placeholder: "Tell us about it...", tabindex: "1", class: "modal_textarea"

      / = f.hidden_field :user_id, :value => @user.id
      / = f.hidden_field :sender_id, :value => current_user.id
      / = f.hidden_field :ntype, :value => "message"

  .modal-footer
    %a.btn{"data-dismiss" => "modal", href: "#"} Close
    %button.btn.btn-inverse{href: "#", type: "submit", tabindex: "2"}
      %i.icon-arrow-right.icon-white
      Send to Admin