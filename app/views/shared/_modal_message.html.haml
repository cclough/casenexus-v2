#modal_message.modal.hide.fade
  = form_for(@notification, remote: true) do |f|
    .modal-header
      %button.close{"data-dismiss" => "modal", :type => "button"} Ã—

      %h3 Send Message

    .modal-body

      %p
        Contact this user
    
      #flash_notifications
        = render 'shared/error_messages', object: @notification

      %div
        = f.text_area :content, placeholder: "Send message...", tabindex: "1"

        = f.hidden_field :user_id, :value => @user.id
        = f.hidden_field :sender_id, :value => current_user.id
        = f.hidden_field :ntype, :value => "message"

    .modal-footer
      %a.btn{"data-dismiss" => "modal", :href => "#"} Close
      %button.btn.btn-primary{:href => "#",:type => "submit", tabindex: "2"}
        %i.icon-arrow-right.icon-white
        Send Message
