- @books = Book.search_for(params[:search]).order("title asc").paginate(per_page: 10, page: params[:page])




= form_for @event, remote: true do |f|
  .modal-header
    %button.close{"data-dismiss" => "modal", type: "button"} Ã—

    %h3 New Case Appointment

  .modal-body  

    #flash_notifications
      = render 'shared/error_messages', object: @event

    .row
      - if @friend.blank?
        %select#events_new_friend_select.chzn-select.span28{"data-placeholder" => "Choose a friend", name:"event[partner_id]"}
          %option Choose a friend
          = options_from_collection_for_select(current_user.accepted_friends, "id", "name")
      - else
        .span13
          With:
        .span.offset1#events_edit_avatar
          = image_tag "avatars/icon.png"
        .span.offset1
          %strong
            = @friend.name
            = f.hidden_field :partner_id, value: @friend.id.to_s, id: "#events_new_friend_select"
    





    #events_new_friend_timezone



    .spacer20


    .spacer20


    .row
      #events_new_datetime_picker.input-append.date
        %span.add-on
          %i.icon-calendar
        = f.text_field :datetime, id: "events_new_datetime_input", placeholder: "Select a date and time", class: "application_form_input_alternative whitebg"






    #events_new_datetime_friend



    .spacer20


    .spacer20


    .row


      - if @book_user.blank?


        %select#events_new_book_select.chzn-select.span30{"data-placeholder" => "Choose a case", name: "event[book_id_partner]"}
          %option Which case should they prepare for you?
          / = options_from_collection_for_select(Book.all, "id", "title")
          - Book.all.each do |books_select_item|
            %option{value: books_select_item.id }
              = books_select_item.author.split(' ')[0] + " - " + books_select_item.title



        .spacer20

        #events_new_book_viewer
          #events_new_book_viewer_empty No book selected
          / show small loaded in by js

      - else
        .span13
          They will prepare
        .span20
          = @book_user.author.split(' ')[0] + " - " + @book_user.title
          = f.hidden_field :book_id_partner, value: @book_user.id




  .modal-footer
    %a.btn{"data-dismiss" => "modal", href: "#"} Close
    .modal_submit_button.btn.btn-inverse{tabindex: "102"}
      %i.icon-arrow-right.icon-white
      Book Appointment



