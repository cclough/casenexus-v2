= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]


- if @books.size > 0
  - @books.each do |books_item|
    = render partial: 'books_item' , locals: { books_item: books_item }

- else
  #books_index_books_form_body_empty.panel.dark.kill_top.kill_bottom
    #books_index_books_form_empty
      #books_index_books_form_empty_icon
        %i.icon-book
      %p Nothing found!

= paginate @books
