= form_for @event do |f|
  .modal-header
    %button.close{"data-dismiss" => "modal", type: "button"} Ã—

    %h3 New Event

  .modal-body  
    - if @event.errors.any?
      #error_explanation
        %h2
          = pluralize(@event.errors.count, "error")
          prohibited this event from being saved:
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    %div
      .field
        Date & time
        %br/
        = f.text_field :datetime, 'data-date-format' => "dd/mm/yyyy", id:"events_datepicker"
      .field
        .row
          .span20
            #events_new_input_hour.panel.dark.kill_all
              .row
                Hour
              .row
                - (1..12).each do |i|
                  .events_new_input_hour_button.btn.btn-inverse{ "data-num" => i }
                    = i
                #events_new_input_ampm.panel.dark.kill_all
                  .events_new_input_ampm_button.btn.btn-inverse
                    AM
                  .events_new_input_ampm_button.btn.btn-inverse
                    PM

          .span11
            #events_new_input_minute.panel.dark.kill_top.kill_bottom
              .row
                Minute
              .row
                .events_new_input_minute_button.btn.btn-inverse
                  15
              .row
                .events_new_input_minute_button.btn.btn-inverse
                  30
              .row
                .events_new_input_minute_button.btn.btn-inverse
                  45
              .row
                .events_new_input_minute_button.btn.btn-inverse
                  00

      .field
        Friend
        %br/
        %select.chzn-select.span20{"data-placeholder" => "Choose a case", name:"event[book_id_user]"}
          %option
            = options_from_collection_for_select(@books, "id", "title", @event.book_id_user)
      .field
        Which case would you like your friend to prepare?
        %br/
        %select.chzn-select.span20{"data-placeholder" => "Choose a case", name:"event[book_id_partner]"}
          %option
            = options_from_collection_for_select(@books, "id", "title", @event.book_id_partner)


  .modal-footer
    %a.btn{"data-dismiss" => "modal", href: "#"} Close
    = f.submit "Book Appointment", class: "btn btn-inverse"

    