= form_for @event do |f|
  .modal-header
    %button.close{"data-dismiss" => "modal", type: "button"} Ã—

    %h3 Edit Event

  .modal-body  
    - if @event.errors.any?
      #error_explanation
        %h2
          = pluralize(@event.errors.count, "error")
          prohibited this event from being saved:
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    %div
      .field
        Date & time
        %br/
        = f.text_field :datetime, 'data-date-format' => "dd/mm/yyyy", id:"events_datepicker"
      .field
        Book for your interview
        %br/
        %select.chzn-select.span20{"data-placeholder" => "Choose a case", name:"event[book_id_user]"}
          %option
            = options_from_collection_for_select(@books, "id", "title", @event.book_id_user)
      .field
        Book for their interview
        %br/
        %select.chzn-select.span20{"data-placeholder" => "Choose a case", name:"event[book_id_partner]"}
          %option
            = options_from_collection_for_select(@books, "id", "title", @event.book_id_partner)
  .modal-footer
    %a.btn{"data-dismiss" => "modal", href: "#"} Close
    = f.submit "Edit Appointment", class: "btn btn-inverse"
