= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    Date & time
    %br/
    #events_datepicker.input-append.date
      = f.text_field :datetime, "data-format" => "dd/MM/yyyy hh:mm:ss"
      %span.add-on
        %i{"data-date-icon" => "icon-calendar", "data-time-icon" => "icon-time"}
  .field
    .row
      .span20
        #events_new_input_hour
          - (1..12).each do |i|
            .btn.btn-inverse
              = i
      .span20
        #events_new_input_time
          .btn.btn-inverse
            15
          .btn.btn-inverse
            30
          .btn.btn-inverse
            45
          .btn.btn-inverse
            00
      .span5.offset2
        #events_new_input_ampm
          .btn.btn-inverse
            AM
          .btn.btn-inverse
            PM


  .field
    Friend
    %br/
    = f.select :partner_id, options_from_collection_for_select(@friends, "id", "name")
  .field
    Which case would you like your friend to prepare?
    %br/
    = f.select :book_id_user, options_from_collection_for_select(@books, "id", "title")

  .actions
    = f.submit "Book Appointment", class: "btn btn-inverse"