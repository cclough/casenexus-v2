<%- if @event.errors.any? %>

  $('#modal_event').html("<%= escape_javascript(render('new_form')) %>");

  summary_index_events_modal_rebless();

<%- else %>

  //$("#events_calendar_container").html(" escape_javascript(render 'events/calendar') "); // add back in ruby brackets

	$('#modal_event').modal('hide');

  $("body").append("<%= escape_javascript(render partial: 'layouts/flash' , locals: { flash: flash }).html_safe %>");
	
	$("div[id=application_flash]:last").fadeIn("fast", function () {

    setTimeout(function() {
      $("div[id=application_flash]:last").fadeOut('fast', function() {
        $("div[id=application_flash]:last").remove();
      });
    }, 4000);

	});

<%- end %>