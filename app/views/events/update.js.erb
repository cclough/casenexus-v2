<%- if @event.errors.any? %>

  $('#modal_event').html("<%= escape_javascript(render('shared/modal_event_edit_form')) %>");

  window.application_form_errors_close();

  window.events_modal_rebless();

<%- else %>

  $('#modal_event').modal('hide');

  $("body").append("<%= escape_javascript(render partial: 'layouts/flash' , locals: { flash: flash }).html_safe %>");
  
  $("div[id=application_flash]:last").fadeIn("fast", function () {

    setTimeout(function() {
      $("div[id=application_flash]:last").fadeOut('fast', function() {
        $("div[id=application_flash]:last").remove();
      });
    }, 4000);

  });

   $("#profile_index_panel_calendar").html("<%= escape_javascript(render 'calendar') %>"); // add back in ruby brackets
   window.events_calendar_rebless();
   
<%- end %>
