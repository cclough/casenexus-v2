= form_for @event, remote: true do |f|
  .modal-header
    %button.close{"data-dismiss" => "modal", type: "button"} Ã—

    %h3 New Case Appointment

  .modal-body  

    #flash_notifications
      = render 'shared/error_messages', object: @event

    .row
      - if @friend.blank?
        .span13
          Choose a Friend
        .span20
          %select#events_new_friend_select.chzn-select.span20{"data-placeholder" => "Choose a friend", name:"event[partner_id]"}
            %option
              = options_from_collection_for_select(current_user.accepted_friends, "id", "name")
      - else
        .span13
          With:
        .span.offset1#events_edit_avatar
          = image_tag "avatars/icon.png"
        .span.offset1
          %strong
            = @friend.name
            = f.hidden_field :partner_id, value: @friend.id.to_s, id: "#events_new_friend_select"
    .spacer5
    .row
      .offset13
        #events_new_friend_timezone.application_bootstrap_yellow
    .spacer10
    .row
      .span13
        Chose Date & Time
      .span20
        #events_new_datetime_picker.input-append.date
          = f.text_field :datetime, id: "events_new_datetime_input", placeholder: "..."
          %span.add-on
            %i.icon-calendar

    .row
      .offset13
        #events_new_datetime_friend.application_bootstrap_blue

    .spacer10
    .row
      - if @book_user.blank?
        .span13
          Which case should they prepare?
        .span20
          %select.chzn-select.span20{"data-placeholder" => "Choose a case", name:"event[book_id_partner]"}
            %option
              / = options_from_collection_for_select(Book.all, "id", "title")
              - Book.all.each do |books_select_item|
                %option{value: books_select_item.id }
                  = books_select_item.author.split(' ')[0] + " - " + books_select_item.title
      - else
        .span13
          They will prepare
        .span20
          = @book_user.author.split(' ')[0] + " - " + @book_user.title
          = f.hidden_field :book_id_partner, value: @book_user.id

  .modal-footer
    %a.btn{"data-dismiss" => "modal", href: "#"} Close
    = f.submit "Book Appointment", class: "btn btn-inverse"

    