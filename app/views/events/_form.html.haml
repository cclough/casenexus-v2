= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    Friend
    %br/
    = select_tag :partner_id, options_from_collection_for_select(@friends, "id", "name")
  .field
    Date & time
    %br/
    = f.text_field :datetime
  .field
    Book for your interview
    %br/
    = select_tag :user_book_id, options_from_collection_for_select(@books, "id", "title")
  .field
    Book for their interview
    %br/
    = select_tag :partner_book_id, options_from_collection_for_select(@books, "id", "title")
  .actions
    = f.submit